#PBS -m abe

### Set variables
RAMDIR=/dev/shm/temp_sd566

### Remove possible old data
rm -rf $RAMDIR | xargs

### Create folders and copy files
mkdir $RAMDIR/

sleep 23.5h

### Remove the entire RAM-folder
rm -rf $RAMDIR | xargs